<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
            targetNamespace="urn:wildfly:hashicorp-vault:experimental:1.0"
            xmlns="urn:wildfly:hashicorp-vault:experimental:1.0"
            elementFormDefault="qualified"
            attributeFormDefault="unqualified"
            version="1.0">

    <!-- The subsystem root element -->
    <xs:element name="subsystem" type="subsystemType"/>

    <xs:complexType name="subsystemType">
        <xs:sequence>
            <xs:element name="credential-store" type="credentialStoreType" minOccurs="0" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="credentialStoreType">
        <xs:annotation>
            <xs:documentation>
                HashiCorp Vault credential store configuration.
            </xs:documentation>
        </xs:annotation>
        <xs:sequence>
            <xs:element name="credential-reference" type="credential-reference-type" minOccurs="0" maxOccurs="1"/>
        </xs:sequence>
        <xs:attribute name="name" type="xs:string" use="required">
            <xs:annotation>
                <xs:documentation>
                    The name of the credential store.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="host-address" type="xs:string" use="required">
            <xs:annotation>
                <xs:documentation>
                    The HashiCorp Vault server address (e.g., https://vault.example.com:8200).
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="namespace" type="xs:string" use="optional">
            <xs:annotation>
                <xs:documentation>
                    The HashiCorp Vault namespace.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="truststore-path" type="xs:string" use="optional">
            <xs:annotation>
                <xs:documentation>
                    Path to the truststore file.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="keystore-path" type="xs:string" use="optional">
            <xs:annotation>
                <xs:documentation>
                    Path to the keystore file.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
            <xs:attribute name="truststore-password" type="xs:string" use="optional">
                <xs:annotation>
                    <xs:documentation>
                        Password for the keystore.
                    </xs:documentation>
                </xs:annotation>
            </xs:attribute>
        </xs:complexType>

    <xs:complexType name="credential-reference-type">
        <xs:annotation>
            <xs:documentation>
                A reference to a credential stored in a credential store.
            </xs:documentation>
        </xs:annotation>
        <xs:attribute name="store" type="xs:string" use="optional">
            <xs:annotation>
                <xs:documentation>
                    The name of the credential store holding the credential.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="alias" type="xs:string" use="optional">
            <xs:annotation>
                <xs:documentation>
                    The alias of the credential in the store.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="type" type="xs:string" use="optional">
            <xs:annotation>
                <xs:documentation>
                    The type of credential.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
        <xs:attribute name="clear-text" type="xs:string" use="optional">
            <xs:annotation>
                <xs:documentation>
                    The credential in clear text.
                </xs:documentation>
            </xs:annotation>
        </xs:attribute>
    </xs:complexType>
</xs:schema>
