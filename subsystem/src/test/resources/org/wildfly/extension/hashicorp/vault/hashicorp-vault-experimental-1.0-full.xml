<subsystem xmlns="urn:wildfly:hashicorp-vault:experimental:1.0">
    <credential-store name="minimal-vault" 
                      host-address="https://vault.minimal.com:8200">
        <credential-reference clear-text="minimal-token-123"/>
    </credential-store>

    <credential-store name="namespaced-vault" 
                      host-address="https://vault.namespace.com:8200"
                      namespace="production">
        <credential-reference clear-text="namespaced-token-123"/>
    </credential-store>

    <credential-store name="secure-vault" 
                      host-address="https://vault.secure.com:8200"
                      namespace="admin"
                      truststore-path="/opt/security/truststore.jks"
                      keystore-path="/opt/security/keystore.jks"
                      truststore-password="secure-password">
        <credential-reference clear-text="secure-token-123"/>
    </credential-store>

    <credential-store name="credref-vault" 
                      host-address="https://vault.credref.com:8200">
        <credential-reference clear-text="cleartext-token"/>
    </credential-store>
</subsystem>
